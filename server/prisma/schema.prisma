// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider      = "prisma-client-js"
  engineType    = "binary"
  binaryTargets = ["native", "linux-musl-openssl-3.0.x"]
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

generator classes {
  provider                        = "prisma-types-generator"
  output                          = "../src/prisma/models"
  outputToNestJsResourceStructure = "false"
  flatResourceStructure           = "false"
  exportRelationModifierClasses   = "true"
  reExport                        = "true"
  dtoSuffix                       = ""
  entityPrefix                    = ""
  entitySuffix                    = "WithRelations"
  classValidation                 = "true"
  fileNamingStyle                 = "camel"
  noDependencies                  = "false"
  excludeEntity                   = "false"
  excludePlainDto                 = "false"
  excludeCreateDto                = "false"
  excludeUpdateDto                = "false"
  excludeConnectDto               = "true"
  definiteAssignmentAssertion     = "true"
}

/////// Models

model User {
  /// @description Unique numeric user identifier
  /// @example 123
  id         Int          @id @default(autoincrement())
  /// @description The last name of the User
  /// @example Doe
  lastName   String
  /// @description The first name of the User
  /// @example John
  firstName  String
  /// @description The username
  /// @example johnDoe44
  userName   String       @unique
  /// @description The hashed password of the User\'s account
  password   String
  /// @description The phone number of the User
  /// @example "0123456789"
  phone      String       @unique
  /// @description The email address of th User
  /// @example john.doe@mail.com
  email      String       @unique
  ToyListing ToyListing[]

  @@map("users")
}

enum Condition {
  New
  VeryGood
  Good
  Acceptable
  Bad

  @@map("condition")
}

enum ToyType {
  Plastic
  Wood
  Dinosaur
  Car
  VideoGame
  ConstructionToy
  BoardGame
  Other

  @@map("toy_type")
}

model ToyListing {
  /// @description Unique numeric offer identifier
  /// @example 123
  id        Int       @id @default(autoincrement())
  /// @description The title of the listing
  /// @example Silent Hill 4 - PlayStation 2 With Booklet
  title     String
  /// @description The condition of the listed toy
  condition Condition
  /// @description The condition of the listed toy
  type      ToyType
  /// @description The Owner of the Listing
  owner     User      @relation(fields: [ownerId], references: [id], onDelete: Cascade)
  ownerId   Int
  /// @description Post Code of the Toy\'s location
  /// @example 44000
  postCode  Int
  /// @description Date of the listing\'s creation
  addDate   DateTime  @default(now())

  @@map("toy_offers")
}
